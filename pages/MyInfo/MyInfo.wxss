/* pages/MyInfo/MyInfo.wxss */
@import "../../resource/template/template.wxss";
@import "../../resource/css/fonticon.wxss";

page {
  background: #f6f6f6;
  font-size: 12px;
  height: 100%;
}

.swiper-tab {
  width: 100%;
  border-bottom: 2rpx solid #777;
  text-align: center;
  line-height: 80rpx;
}

.swiper-tab-list {
  font-size: 12px;
  display: inline-block;
  width: 47%;
  color: #777;
}

.on {
  color: #da7c0c;
  font-weight: bold;
  border-bottom: 5rpx solid #da7c0c;
}

.swiper-box {
  display: block;
  height: 100%;
  width: 100%;
}

.swiper-box swiper-item {
  white-space: nowrap;
  background: #f0f0f0;
}

.swiper-box view {
  text-align: center;
}

.dingdan-box {
  border-radius: 5px;
  padding: 2px 10px;
  background: #fff;
  margin-top: 5px;
}

.box-shang {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  line-height: 22px;
}

.box-bian {
  border-bottom: 1rpx solid #f7f7f7;
}

.box-cuzi {
  display: flex;
  color: #b63400;
  font-weight: bold;
}

.box-color {
   font-size: 24rpx;
  display: flex;
  color: #b8b8b8;
}
